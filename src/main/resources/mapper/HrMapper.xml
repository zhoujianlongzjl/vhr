<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjl.vhr.mapper.HrMapper">
    <select id="loadUserByUsername" resultType="com.zjl.vhr.entity.Hr">
        select * from hr where username=#{username};
    </select>

    <select id="getRolesById" resultType="com.zjl.vhr.entity.Role">
        select r.* from role r,hr_role hrr where r.id=hrr.rid and hrr.hrid=#{id}
    </select>
</mapper>
